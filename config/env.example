# Environment variables for Habit Tracker
# Copy this file to .env and configure for your environment

# Development mode - allows default_user (set to false in production)
ALLOW_DEFAULT_USER=false

# Database URL (optional, defaults to sqlite:///./habits.db)
# For PostgreSQL: postgresql://user:password@localhost/habits
# DATABASE_URL=sqlite:///./habits.db

# Telegram Bot Token (for future initData validation)
# TELEGRAM_BOT_TOKEN=your_bot_token_here

# Production settings
# DEBUG=false
# LOG_LEVEL=INFO

